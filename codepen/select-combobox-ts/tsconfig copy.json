{
  "compilerOptions": {
    // "target": "ES6",
    "module": "System",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}

{
  "compilerOptions": {
    "module": "None",
    "target": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./dist/script.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": true,
    "moduleResolution": "classic"
  },
  "include": ["src"]
}